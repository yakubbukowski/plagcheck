{% trans_default_domain 'UserBundle' %}
{% extends 'base.html.twig' %}
{% block title %}PlagCheck| Sign Up{% endblock %}

{% block body %}
    <!--Page Title-->
    <section class="page-title" style="background-image:url({{ asset('images/resource/6.jpg') }});">
        <div class="auto-container">
            <div class="inner-box">
                <h1>{{ 'Sign In'|trans }}</h1>
                <ul class="bread-crumb">
                    <li><a href="{{ path('homepage') }}">{{ 'Home'|trans }}</a></li>
                    <li>{{ 'Sign In'|trans }}</li>
                </ul>
            </div>
        </div>
    </section>
    <!--End Page Title-->

    <section class="signup-section">
        <div class="auto-container">
            <div class="inner-box">
                {% if error %}
                    <div class="sign-error-div">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <!--Signup Form-->
                <div class="signup-form">
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                <div class="form-group">
                                    <label for="username">{{ 'Username'|trans }}</label>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                                </div>
                                <div class="form-group">
                                    <label for="password">{{ 'Password'|trans }}</label>
                                    <input type="password" id="password" name="_password" required="required" />
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    <label for="remember_me">{{ 'Remember Me'|trans }}</label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" id="_submit" name="_submit" class="theme-btn btn-style-three width-100" value="{{ 'Submit'|trans }}" />
                                </div>
                        </form>
                </div>

                <!--Lower Box-->
                <div class="lower-box">
                    <div class="or"><span>{{ 'Or'|trans }}</span></div>
                    <h3>{{ 'Sign Up for Free'|trans }}</h3>
                    <a class="theme-btn btn-style-three width-100" href="{{ path('fos_user_registration_register') }}">{{ 'Sign Up'|trans }}</a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}